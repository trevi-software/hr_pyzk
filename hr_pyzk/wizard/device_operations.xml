<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="device_operations_wizard" model="ir.ui.view">
        <field name="name">Device Operations Wizard</field>
        <field name="model">hr.attendance.clock.operations</field>
        <field name="arch" type="xml">
            <form string="Device Operatoins">
                <sheet>

                </sheet>
            </form>
        </field>
    </record>

    <record id="open_device_operations_wizard" model="ir.actions.act_window">
        <field name="name">Device Operations</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">hr.attendance.clock.operations</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
          <field name="view_id" ref="device_operations_wizard" />
        </record>

    <menuitem
        id="menu_device_operations_wizard"
        name="Device Operations"
        action="open_device_operations_wizard"
        parent="wizards_sub_menu"
        sequence="1"
    />

</odoo>